
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="@Url.Action("Login","Home")" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Usuario:</label><br>
                                <input type="text" name="NameUser" id="NameUser" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña:</label><br>
                                <input type="password" name="clave" id="clave" class="form-control">
                            </div>
                            <div class="form-group">
                                <br />
                                <input type="submit" name="btnEnviar" class="btn btn-info btn-md" value="Enviar">
                            </div>
                            <div id="register-link" class="text-right">
                                <a href="@Url.Action("Register","Home")" class="text-info">No tengo cuenta! </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["MSG"] != null)
    {
        <center><span style="color: red; font-size: 14px;">@TempData["MSG"].ToString()</span></center>
    }
</body>
</html>
