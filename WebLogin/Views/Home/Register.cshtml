
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/Register.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="col-md-6 mx-auto text-center">
            <div class="header-title">
                <h1 class="wv-heading--title">
                    Sign Up!
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="myform form ">
                    <form action="@Url.Action("Register","Home")" method="post" name="login">
                        <div class="form-group">
                            <input type="text" name="NameUser" class="form-control my-input" id="NameUser" placeholder="Usuario">
                        </div>
                        <div class="form-group">
                            <input type="password" name="clave" class="form-control my-input" id="clave" placeholder="Contraseña">
                        </div>
                        <div class="form-group">
                            <input type="password" min="0" name="confirmarClave" id="confirmarClave" class="form-control my-input" placeholder="Repita Contraseña">
                        </div>
                        <div class="text-center ">
                            <button type="submit" class=" btn btn-block send-button tx-tfm">Crear Mi Cuenta</button>
                        </div>
                        <div class="col-md-12 ">
                            <div class="login-or">
                                <hr class="hr-or">
                                <span class="span-or"></span>
                            </div>
                        </div>
                        <center>
                            <p class="small mt-3">
                                <a href="@Url.Action("Login","Home")">Ya tengo cuenta!</a>
                            </p>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["NoAgregado"] != null)
    {
        <center><span style="color: red; font-size: 14px;">@TempData["NoAgregado"].ToString()</span></center>
    }
</body>
</html>
